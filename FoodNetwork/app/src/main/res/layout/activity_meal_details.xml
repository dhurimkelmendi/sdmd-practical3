<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="gr.academic.city.sdmd.foodnetwork.ui.activity.MealDetailsActivity">
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_meal_creation_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                tools:text="24/05/2017"/>

            <TextView
                android:id="@+id/tv_meal_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/tv_meal_creation_date"
                android:layout_toStartOf="@id/tv_meal_creation_date"
                android:textSize="20sp"
                tools:text="Pasta Pesto"/>
        <ImageView
            android:id="@+id/iv_meal_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_below="@id/tv_meal_title"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tv_meal_recipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_meal_preview"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            tools:text="Just order in, it's easier."/>


            <TextView
                android:id="@+id/tv_number_of_servings_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_meal_recipe"
                android:layout_marginTop="10dp"
                android:text="@string/number_of_servings"/>

            <TextView
                android:id="@+id/tv_number_of_servings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_number_of_servings_header"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@id/tv_number_of_servings_header"
                android:layout_toRightOf="@id/tv_number_of_servings_header"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:text="2"/>

            <TextView
                android:id="@+id/tv_prep_time_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_number_of_servings_header"
                android:layout_marginTop="10dp"
                android:text="@string/prep_time"/>

            <TextView
                android:id="@+id/tv_prep_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_prep_time_header"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@id/tv_prep_time_header"
                android:layout_toRightOf="@id/tv_prep_time_header"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:text="0:10"/>

            <TextView
                android:id="@+id/tv_upvotes_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_prep_time"
                android:layout_marginTop="10dp"
                android:text="@string/upvotes"/>

            <TextView
                android:id="@+id/tv_upvotes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_upvotes_header"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@id/tv_upvotes_header"
                android:layout_toRightOf="@id/tv_upvotes_header"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:text="1"/>

            <Button
                android:id="@+id/btn_upvote_meal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upvote"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <include
                layout="@layout/layout_toolbar"
                android:id="@+id/toolbar"/>

            <fragment
                android:id="@+id/f_meal_details"
                android:layout_below="@+id/toolbar"
                class="gr.academic.city.sdmd.foodnetwork.ui.fragments.MealDetailsFragment"
                style="@style/MatchWidthWrapHeight"
                tools:layout="@layout/fragment_meal_details"/>
        </RelativeLayout>

    </ScrollView>
</android.support.design.widget.CoordinatorLayout>